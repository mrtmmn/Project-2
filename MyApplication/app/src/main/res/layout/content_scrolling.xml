        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:button="@android:drawable/btn_star"-->
        <!--android:id="@+id/fav_button"/>-->

</android.support.v4.widget.NestedScrollView>
